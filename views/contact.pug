extends base.pug

block scripts
  script(src='../static/index.js')

block style 
    style
        include ../static/style.css
        include ../static/styleContact.css
 
block content
    div.container 
        h1 Contact Us 
        form(action="/contact", method="post", Class="myForm")
            input(type="text", name="name", Class="myInput", placeholder="Enter your name") 
            input(type="phone", name="phone", Class="myInput", placeholder="Enter your phone") 
            input(type="email", name="email", Class="myInput", placeholder="Enter your email") 
            input(type="text", name="desc", Class="myInput", placeholder="Enter your concern")
            button(Class="btn")  
                | Submit
        div.content 
            h1 Get In Touch
            p We are here to answer any questions you may have about our Travel Booking Script. Reach out to us and we'll respond as soon as we can.
            p Even if there is something you have always wanted to experience and can't find it on Travel Booking Script, let us know and we promise we'll do our best to find it for you and send you there.
            